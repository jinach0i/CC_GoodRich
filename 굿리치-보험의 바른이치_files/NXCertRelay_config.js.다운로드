function LoadMain() {
	if(SupportCheck())
	{
		exlog("LoadMain");
		SetRelayServer();
		SetBannerImg();
		SetFunction();
		SetExplainStr();
		SetDisplayOID();
		SetPwdCount();
		//SetPKCS12();
		//SetAutoFocus();
		//SetLanguage();
		//SetKmcertsupport();
		//SetRequiredAlg();
		//SetKeypro();
		nxCR_SetTranskey();
		//SetCodeSignVerify();
		//SetCertDN();
		//SetFontSizeEditCtrl();
		//SetFontSizeCnum();
		//SetCertDelete();
		//SetPolicyConvertTable();
		KSCertRelayNXInterface.KS_LoadMain(["NONE" , "NONE"]);
	}
	else
	{
		//안내페이지 이동시 사용
		//location.href = TouchEnNxConfig.installPage.nxcr;
	}
}

function LoadMainQR() {
	if(SupportCheck())
	{
		SetBannerImg();
		SetServerSendCert_QR();
		SetServerMyCert_QR();
		SetQRTimer();
		SetDisplayOID();
		SetExplainStr_QR();
		//SetLanguage();
		//SetHttpVer_QR();
		//SetKeypro();
		nxCR_SetTranskey();
		//SetPKCS12();
		//SetCodeSignVerify();
		//SetCertDelete();
		//SetPolicyConvertTable();
		KSCertRelayNXInterface.KS_LoadMainQR(["NONE" , "NONE"]);
	}
	else
	{
		//안내페이지 이동시 사용
		//location.href = TouchEnNxConfig.installPage.nxcr;
	}
}